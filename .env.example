# Neon Postgres
DATABASE_URL="postgresql://username:password@your-neon-host/dbname?sslmode=require"

# Manus API
MANUS_API_KEY=""
MANUS_BASE_URL="https://api.manus.ai"
# Prefer URL-safe secret chars only: A-Z a-z 0-9 _ -
MANUS_WEBHOOK_SECRET="replace-with-url-safe-random-secret"
# Public callback URL Manus should POST to.
# Example: https://<public-domain>/api/manus/webhook?secret=<MANUS_WEBHOOK_SECRET>
MANUS_WEBHOOK_URL=""
MANUS_AGENT_PROFILE="manus-1.6"

# Task Router LLM (optional for multi-active-task disambiguation)
ROUTER_LLM_PROVIDER="openai_compatible"
ROUTER_LLM_API_KEY=""
ROUTER_LLM_MODEL="gpt-5-mini"
ROUTER_LLM_BASE_URL="https://api.openai.com"

# WhatsApp (Baileys auth state)
WHATSAPP_AUTH_DIR="./.data/whatsapp-auth"
WHATSAPP_SESSION_NAME="default"

# Internal routes
INTERNAL_CLEANUP_TOKEN="replace-with-32-char-random-secret"
